{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022", "DOM"],
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@core/*": ["src/app/core/*"],
            "@shared/*": ["src/app/shared/*"],
            "@ui/*": ["src/app/shared/ui/*"],
            "@features/*": ["src/app/features/*"],
            "@themes/*": ["src/themes/*"],
        },
        "strict": true,
        "skipLibCheck": true
    }
}